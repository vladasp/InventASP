@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title> </title>
</head>

<div class="Tables">
    <h1>Clients data table</h1>
    @{
        var grid = new WebGrid(Model, canPage: true, rowsPerPage: 5, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
        var client = new Client();
        grid.Pager(WebGridPagerModes.NextPrevious);
    }
    @Styles.Render("~/Content/text.css")


    <div id="gridContent">
        @grid.GetHtml(
                    tableStyle: "webGrid",
                    headerStyle: "header",
                    alternatingRowStyle: "alt",
                    selectedRowStyle: "select",
                    columns: grid.Columns(
                    grid.Column("Id", "Id"),
                    grid.Column("Name", format: @<text>@Html.ActionLink(
                                                            (string)item.Name, "ClientsInfo", "Home",
                                                            new { id = item.ID}, null)</text>),
                    grid.Column("Adress", "Adress"),
                    grid.Column("Sum", "Sum")
                )
         )
        @if (grid.HasSelection)
        {
            using (MyModelDB context = new MyModelDB())
            {
                client = context.Clients.Find(grid.SelectedRow[1]);
            }
            
            @*<b>Id</b> @client.ID<br />
            <b>Name</b>  @client.Name<br />
            <b>Aderess</b> @client.Adress<br />*@
        }
    </div>
</div>