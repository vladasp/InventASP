@{
    ViewBag.Title = "Home Page";
}
<head>
    <title> </title>
    <style type="text/css">
        .webGrid {
            margin: 4px;
            border-collapse: collapse;
            width: 500px;
            background-color: #FCFCFC;
        }

        .header {
            background-color: #C1D4E6;
            font-weight: bold;
            color: #FFF;
        }

        .webGrid th, .webGrid td {
            border: 1px solid #C0C0C0;
            padding: 5px;
        }

        .alt {
            background-color: #FCFCFC;
            color: #000;
        }

        .gridHead a:hover {
            text-decoration: underline;
        }

        .description {
            width: auto;
        }

        .select {
            background-color: #E4E9F5;
        }
    </style>
</head>

<div class="Tables">
    <h1>Clients data table</h1>
    @{
        var grid = new WebGrid(Model, canPage: true, rowsPerPage: 5, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
        var client = new Client();
        grid.Pager(WebGridPagerModes.NextPrevious);
    }

    <div id="gridContent">
        @grid.GetHtml(
                    tableStyle: "webGrid",
                    headerStyle: "header",
                    alternatingRowStyle: "alt",
                    selectedRowStyle: "select",
                    columns: grid.Columns(
                    grid.Column("Id", "Id"),
                    grid.Column("Name", format: (item) => item.GetSelectLink(item.Name)),
                    grid.Column("Adress", "Adress"),
                    grid.Column("Sum", "Sum")
                )
         )
        @if (grid.HasSelection)
        {
            using (MyModelDB context = new MyModelDB())
            {
                client = context.Clients.Find(grid.SelectedRow[1]);
            }
            <b>Id</b> @client.ID<br />
            <b>Name</b>  @client.Name<br />
            <b>Aderess</b> @client.Adress<br />
        }
    </div>
</div>